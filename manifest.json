{
  "name": "Birthday",
  "version": "1.0",
  "description": "Build an Extension!",
  "permissions":["identity","activeTab","declarativeContent","storage"],
  "oauth2":{
    "client_id":"10472574227-e5drsmg7ped4v91ccfg1kfp01af8nk8r.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/calendar"]
  },
  "options_page":"options.html",
  "content_scripts":[
    {
      "matches":[
        "https://www.facebook.com/events/birthdays/"
      ],
      "js":["content.js"]
    }
  ],
  "background": {
    "scripts": ["background.js", "api.js"],
    "persistent": false
  },
  "page_action":{
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/get_started16.png",
      "32": "images/get_started32.png",
      "48": "images/get_started48.png",
      "128": "images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/get_started16.png",
    "32": "images/get_started32.png",
    "48": "images/get_started48.png",
    "128": "images/get_started128.png"
  },
  "content_security_policy": "script-src 'self' https://apis.google.com; object-src 'self'",
  "manifest_version": 2
}
